
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int nextId = Model.NextPostId ?? -1;
    int prevId = Model.PreviousPostId ?? -1;
}


@section scripts{
    @Scripts.Render("~/bundles/post")
}

@section styles{
    <style>
		.mainContent{
			position: absolute;
			left: 0px;
			right: 0px;
			bottom: 0px;
			top: 50px;
			padding-top:10px;
			padding-left:20px;
            width: 80%;
		}

        .rightSidebar {
            position: absolute;
            left: 80%;
            right: 0px;
            bottom: 0px;
            top: 50px;
            width: 20%;
        }
    </style>
}

<div class="window" style="width:100%;height:100%;" ng-app="postApp" ng-controller="postController as vm">
    <div class="mainContent">
        <div class="topbar">
            <div> 
            </div>
        </div>
        <div class="titleContainer">
            <span id="title" class="title" style="font-size:25px;">@Model.Title</span>
            <span style="font-size:25px;">@Model.Created.ToString("MM/dd/yyyy")</span>

            <br /><br/>
        </div>
        <div style="height:90%;">
            <div id="content" class="content">
                @Html.Raw(@Model.Content)
            </div>
            <div id="footer">
                <hr />
                <a><span  ng-click="vm.gotoPost(@prevId)" style="cursor:pointer;float:left;">&lt;-- @Model.PreviousPostTitle</span></a>
                <a><span ng-click="vm.gotoPost(@nextId)" style="cursor:pointer;float:right;">@Model.NextPostTitle --&gt;</span></a>
            </div>
        </div>
        <div>
            <label id="message"></label>
        </div>
    </div>
    <div class="rightSidebar">
    </div>
</div>